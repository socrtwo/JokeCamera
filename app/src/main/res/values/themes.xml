<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.JokeCamera" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryVariant">#1565C0</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">#FF5722</item>
        <item name="colorSecondaryVariant">#E64A19</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Slider colors -->
        <item name="colorControlActivated">@color/slider_active</item>
        <item name="colorControlNormal">@color/slider_inactive</item>
    </style>
    
    <!-- Fullscreen theme for main camera activity -->
    <style name="Theme.JokeCamera.Fullscreen" parent="Theme.JokeCamera">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
