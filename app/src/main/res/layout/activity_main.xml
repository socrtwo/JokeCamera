<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/controls_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Face detection status overlay -->
    <TextView
        android:id="@+id/text_face_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:padding="8dp"
        android:text="No face detected"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Settings button -->
    <ImageButton
        android:id="@+id/button_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/circle_button_background"
        android:contentDescription="@string/settings"
        android:src="@drawable/ic_settings"
        android:tint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Switch camera button -->
    <ImageButton
        android:id="@+id/button_switch_camera"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_button_background"
        android:contentDescription="@string/switch_camera"
        android:src="@drawable/ic_switch_camera"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/button_settings"
        app:layout_constraintEnd_toStartOf="@id/button_settings"
        app:layout_constraintTop_toTopOf="@id/button_settings" />

    <!-- Joke display area -->
    <LinearLayout
        android:id="@+id/joke_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#CC000000"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/controls_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_joke_setup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_joke_punchline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text=""
            android:textColor="#FFD700"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Ready"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Controls container -->
    <LinearLayout
        android:id="@+id/controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC000000"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Manual Tell Joke button (hidden by default) -->
            <Button
                android:id="@+id/button_tell_joke"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#4CAF50"
                android:text="@string/tell_joke"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <!-- Capture button -->
            <ImageButton
                android:id="@+id/button_capture"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/capture_button_background"
                android:contentDescription="@string/capture"
                android:src="@drawable/ic_camera"
                android:tint="#FFFFFF" />

            <!-- Start/Stop Auto button -->
            <Button
                android:id="@+id/button_start_stop"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="#2196F3"
                android:text="@string/start_auto"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
